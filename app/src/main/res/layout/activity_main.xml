<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <!--    <ProgressBar-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/progress_bar"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_centerVertical="true"/>-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:hint="Search.."
        android:textColor="#FFFFFF"
        android:textColorHint="#A8FFFFFF" />


    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/black"
         />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="11dp"
        android:background="@null"
        android:src="@android:drawable/ic_menu_search"
        tools:src="@android:drawable/ic_menu_search" />

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/albumButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/screenshot_2021_09_30_003910"
            android:text="Albums"
            tools:src="@drawable/screenshot_2021_09_30_003910" />

        <ImageButton
            android:id="@+id/tracksButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/screenshot_2021_09_30_004400"
            android:text="Tracks"
            tools:src="@drawable/screenshot_2021_09_30_004400" />

        <ImageButton
            android:id="@+id/playlistButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/screenshot_2021_09_30_004547"
            tools:src="@drawable/screenshot_2021_09_30_004547" />

        <ImageButton
            android:id="@+id/artistButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/screenshot_2021_09_30_004703"
            android:text="Artist"
            tools:src="@drawable/screenshot_2021_09_30_004703" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_linear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="46dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>

</layout>